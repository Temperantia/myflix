{
  "name": "myflix",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "build:firebase": "npm run clean && cd \"functions\" && npm i && cd \"..\" && npm run build && npm run copy ",

    "clean": "npm run clean:public && npm run clean:functions && npm run clean:static",
    "clean:functions": "rimraf \"functions/node_modules\" && rimraf \"functions/.nuxt\"",
    "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf \"public/_nuxt\"",
    "clean:static": "rimraf \"static/sw.js\"",

    "copy": "npm run copy:nuxt && npm run copy:static",
    "copy:nuxt": "xcopy \"functions\\.nuxt\\dist\\*\" \"public\\_nuxt\\\" /E /Y",
    "copy:static": "xcopy \"static\\*\" \"public\\\" /E /Y",

    "start:firebase": "firebase serve --only functions,hosting",

    "deploy": "firebase deploy --only functions,hosting"
  },
  "dependencies": {
    "chart.js": "2.9.4",
    "cookie-universal-nuxt": "2.1.4",
    "core-js": "^3.8.1",
    "date-fns-timezone": "0.1.4",
    "fibers": "5.0.0",
    "firebase": "8.1.2",
    "lodash.clonedeep": "4.5.0",
    "lodash.merge": "4.6.2",
    "node-sass": "5.0.0",
    "nuxt": "2.14.12",
    "pug": "3.0.0",
    "pug-plain-loader": "1.1.0",
    "sass": "1.30.0",
    "sass-loader": "8.0.2",
    "slugify": "1.4.6",
    "swiper": "6.4.5",
    "timezone-support": "2.0.2",
    "vue-awesome-swiper": "4.1.1",
    "vue-chartjs": "3.5.1",
    "vue-class-component": "7.2.6",
    "vue-object-merge": "0.1.8",
    "vue-property-decorator": "9.1.2",
    "vue-scrollactive": "0.9.3"
  },
  "devDependencies": {
    "@nuxt/types": "2.14.12",
    "@nuxt/typescript-build": "2.0.3",
    "@nuxtjs/firebase": "7.1.2",
    "@nuxtjs/google-adsense": "1.3.0",
    "@nuxtjs/imagemin": "0.2.0",
    "@nuxtjs/moment": "1.6.1",
    "@nuxtjs/pwa": "3.3.4",
    "@nuxtjs/robots": "2.4.2",
    "@nuxtjs/style-resources": "1.0.0",
    "@nuxtjs/toast": "3.3.1",
    "@nuxtjs/vuetify": "1.11.2",
    "express": "4.17.1",
    "firebase-admin": "9.4.2",
    "firebase-functions": "3.13.1",
    "nuxt-vuex-localstorage": "1.2.7",
    "nuxt-webfontloader": "1.1.0"
  }
}
