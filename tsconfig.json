{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@types/pako",
      "@types/base-64",
      "@nuxt/types",
      "@nuxtjs/toast",
      "@nuxtjs/firebase",
      "@nuxtjs/moment",
      "@nuxtjs/vuetify",
      "vue-social-sharing",
      "cookie-universal-nuxt",
      "swiper"
    ],
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
